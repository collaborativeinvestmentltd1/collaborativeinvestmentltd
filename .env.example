# .env.example
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=production
DOMAIN=collaborativeinvestmentltd.com

# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string_here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_SECURE=false

# Admin Credentials
ADMIN_EMAIL=admin@collaborativeinvestmentltd.com
ADMIN_PASSWORD=secure_password_here

# Security
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=https://collaborativeinvestmentltd.com

# SSL Configuration (Optional)
SSL_KEY_PATH=/etc/ssl/private/ssl.key
SSL_CERT_PATH=/etc/ssl/certs/ssl.cert